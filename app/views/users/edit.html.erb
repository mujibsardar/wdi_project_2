<h1>Update Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br />

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br />

      <%= f.label :headline %>
      <%= f.text_field :headline, class: 'form-control' %><br />

      <%= f.label :bio %>
      <%= f.text_field :bio, class: 'form-control' %><br />

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %><br />

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %><br />

      <%= f.label :nurse_type %>
      <%= f.text_field :nurse_type, class: 'form-control' %><br />

      <%= f.label :agency %>
      <%= f.text_field :agency, class: 'form-control' %><br />

      <%= f.label :image %>
      <%= f.text_field :image, class: 'form-control' %><br />

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br />

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br /><br /> 

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
